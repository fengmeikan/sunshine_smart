<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sunshine.smart.activity.DeviceCateSelActivity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView7"
        android:scaleType="centerCrop"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/page_02" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/smart_cloths"
        android:id="@+id/textView10"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:textColor="#ffffff"
        android:textSize="26dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/smart_yangsheng"
        android:id="@+id/textView11"
        android:layout_marginTop="137dp"
        android:textColor="#ffffff"
        android:textSize="26dp"
        android:layout_below="@+id/textView10"
        android:layout_centerHorizontal="true" />


    <Button
        android:layout_width="80dp"
        android:layout_height="82dp"
        android:id="@+id/button12"
        android:background="@mipmap/cate_sel"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/textView10"
        android:layout_alignEnd="@+id/button13" />

    <Button
        android:layout_width="80dp"
        android:layout_height="82dp"
        android:id="@+id/button13"
        android:background="@mipmap/cate_sel"
        android:layout_below="@+id/textView11"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

</RelativeLayout>
